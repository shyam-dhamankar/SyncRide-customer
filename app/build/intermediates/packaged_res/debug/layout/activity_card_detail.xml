<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBaraboutapp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:title="@string/app_name"
        android:background="@color/colorAccent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_below="@id/toolBaraboutapp"
        android:padding="16dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/titleDetailTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:text="Card Title"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/desc1DetailTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description Line 1"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/desc2DetailTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description Line 2"
                android:layout_marginBottom="16dp"/>



        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/robot"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="App Version : 1.1.0"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"
                android:textColor="@color/dark_gray"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Developers Info :"
                android:textColor="@color/gray"
                android:fontFamily="@font/acme"
                android:textSize="20dp"
                android:layout_margin="12dp"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:id="@+id/devloper1"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/devloper_imageview"
                    android:src="@drawable/user1"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    app:civ_border_width="3dp"
                    app:civ_border_color="#FCFCFC"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/aman_info"
                    android:textSize="16sp"
                    android:fontFamily="@font/alegreya_sans"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:id="@+id/devloper2">


                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/devloper2_imageview"
                    android:src="@drawable/user14"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    app:civ_border_width="3dp"
                    app:civ_border_color="#FCFCFC"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/kavish_info"
                    android:textSize="16sp"
                    android:fontFamily="@font/alegreya_sans"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:id="@+id/devloper3"

                >

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/devloper3_imageview"
                    android:src="@drawable/user12"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    app:civ_border_width="3dp"
                    app:civ_border_color="#FCFCFC"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sanjeev_info"
                    android:textSize="16sp"
                    android:fontFamily="@font/alegreya_sans"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:id="@+id/devloper4"

                >

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/devloper4_imageview"
                    android:src="@drawable/user18"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    app:civ_border_width="3dp"
                    app:civ_border_color="#FCFCFC"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/yash_info"
                    android:textSize="16sp"
                    android:fontFamily="@font/alegreya_sans"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
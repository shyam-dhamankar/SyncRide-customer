<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ChatFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@drawable/chata"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" AI Assistant "
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Helmet Detection AI Assistant ensures safety at construction sites by detecting whether workers are wearing helmets and providing real-time guidance. It helps enforce safety regulations, reducing the risk of accidents and ensuring compliance effortlessly. "
            android:layout_margin="8dp"
            android:textSize="16dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="It integrates an emergency contact feature, ensuring authorities can quickly access vital help during emergencies like forest fires or poaching incidents."
            android:layout_margin="8dp"
            android:textSize="16dp"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medbot can help patients by answering questions about symptoms, medications, diagnoses, and treatments, as well as provide general health information and advice. "
            android:layout_margin="8dp"
            android:textSize="16dp"
            android:visibility="gone"
            />


        <Button
            android:id="@+id/chatopn_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/btn_design_myaccount"
            android:text="Let's Chat"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            />


    </androidx.appcompat.widget.LinearLayoutCompat>


</FrameLayout>